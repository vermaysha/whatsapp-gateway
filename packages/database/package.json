{
  "name": "database",
  "version": "1.0.0",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "private": true,
  "scripts": {
    "build": "tsup",
    "clean": "rimraf .turbo node_modules dist",
    "db:migrate:deploy": "dotenv -e .env.development -- prisma migrate deploy",
    "db:migrate:dev": "dotenv -e .env.development -- prisma migrate dev",
    "db:push": "dotenv -e .env.development -- prisma db push",
    "db:seed": "dotenv -e .env.development -- tsx src/seed.ts",
    "db:generate": "prisma generate || echo \"Skip generate prisma clients\"",
    "dev": "tsup --watch",
    "format": "prisma format && prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\"",
    "prebuild": "pnpm db:generate",
    "predev": "pnpm db:generate",
    "studio": "prisma studio",
    "postinstall": "pnpm db:generate"
  },
  "author": {
    "name": "Ashary Vermaysha",
    "email": "vermaysha@gmail.com"
  },
  "license": "UNLICENSED",
  "dependencies": {
    "@prisma/client": "^5.4.1",
    "hash": "workspace:^",
    "tsconfig": "workspace:^"
  },
  "devDependencies": {
    "@types/node": "^20.8.2",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.50.0",
    "prettier": "^3.0.3",
    "prisma": "^5.4.1",
    "rimraf": "^5.0.5",
    "tsup": "^7.2.0",
    "tsx": "^3.13.0",
    "typescript": "^5.2.2"
  }
}
